package main

import "fmt"

type Conta struct {
	Saldo   float64
	Titular string
}
func depositarNaConta(conta *Conta, valor float64) {
	if conta == nil {
		fmt.Println("Erro: Ponteiro nulo.")
		return
	}
	conta.Saldo += valor
}
func main() {
	minhaConta := Conta{
		Saldo:   1000.0,
		Titular: "Jo찾o",
	}
	fmt.Printf("Saldo antes do dep처sito: %.2f\n", minhaConta.Saldo)
	depositarNaConta(&minhaConta, 500.0)
	fmt.Printf("Saldo ap처s o dep처sito: %.2f\n", minhaConta.Saldo)
}
